{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"lib": ["ES2022", "DOM"],
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
